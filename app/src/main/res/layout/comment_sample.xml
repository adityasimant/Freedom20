<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primaryDark"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/Cview2"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="5dp"
        android:elevation="12dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardCornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/commentRVProfilePic"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="match_parent"

            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_baseline_account_circle_24" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/Cusername1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@color/primaryDark"
        android:padding="5dp"
        android:text="Alison Parker"
        android:textColor="@color/grey"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/Cview2"
        app:layout_constraintStart_toEndOf="@+id/Cview2"
        app:layout_constraintTop_toTopOf="@+id/Cview2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/cmtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/primaryDark"
        android:padding="5dp"
        android:text="TextView"
        android:textColor="@color/grey"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="@+id/Cusername1"
        app:layout_constraintStart_toStartOf="@+id/Cusername1"
        app:layout_constraintTop_toBottomOf="@+id/Cusername1" />

    <TextView
        android:id="@+id/cmtbody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="3dp"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cmtTime" />
</androidx.constraintlayout.widget.ConstraintLayout>